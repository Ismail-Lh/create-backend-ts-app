{
  "name": "create-backend-ts-app",
  "version": "1.1.0",
  "description": "",
  "author": "Lahbiyeb Ismail",
  "main": "index.js",
  "keywords": [
    "cli",
    "typescript"
  ],
  "license": "MIT",
  "bin": {
    "create-backend-ts-app": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "start": "npm run build && cross-env NODE_ENV=production node --trace-warnings ./dist/index.js",
    "watch": "tsc --project './tsconfig.build.json' --watch",
    "dev": "cross-env NODE_ENV=development tsc --project './tsconfig.build.json' --watch & nodemon --trace-warnings ./dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.7",
    "typescript": "^5.6.3"
  }
}
